#include<iostream>
using namespace std;

int main() {
	// Write your code here
	int n,c,i,sum=0,product=1;
    cin>>n;
    cin>>c;
    switch(c)
    {
            case 1:
            {
                for(i=1;i<=n;i++)
                {
                    sum=sum+i;
                }
                cout<<sum;
                break;
            }
            case 2:
            {
                for(i=1;i<=n;i++)
                {
                product=product*i;   
                }
                cout<<product;
                break;
            }
            default:
                cout<<-1;
    }
    return 0;
}
